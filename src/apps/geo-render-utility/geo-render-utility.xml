<geo-render-utility>

    <!-- Core Configuration Items -->
    <core>
        <!-- Max Number of threads to use. -->
        <max-threads value="1" />
    </core>


    <!-- Render Configuration Items -->
    <render>
        <center-coordinate type="geographic" latitude_degrees="36.578581" longitude_degrees="-118.291995" datum="WGS84"/>
        <gsd value="1" />
    </render>


    <!-- Viewer Configuration Items -->
    <viewer-window>
        <name value="Geo-Explore Render Utility"/>
        <size width="1920" height="1080" />
        <vertex-shader   path="src/apps/geo-render-utility/shaders/TransformVertexShader.glsl" />
        <fragment-shader path="src/apps/geo-render-utility/shaders/ColorFragmentShader.glsl" />
        <perspective fov-degrees-angles="45"  aspect-ratio="1.6"  min-clipping="0.1" max-clipping="10000" />
    </viewer-window>

    <!-- Terrain Data Configuration -->
    <terrain>
        <sources>
            <source type="srtm" path="data/unit-tests/dems/srtm" />
        </sources>
    </terrain>

</geo-render-utility>

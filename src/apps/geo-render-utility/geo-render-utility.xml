<geo-render-utility>

    <!-- Render Configuration Items -->
    <render>
        <center-coordinate type="geographic" latitude_degrees="39.5"  longitude_degrees="-119.5" datum="wgs84" />
        <gsd value="0.25" />
    </render>


    <!-- Viewer Configuration Items -->
    <viewer-window>
        <name value="Geo-Explore Render Utility"/>
        <size width="1920" height="1080" />
    </viewer-window>

    <!-- Terrain Data Configuration -->
    <terrain>
        <sources>
            <source type="srtm" path="data/unit-tests/dems/srtm" />
        </sources>
    </terrain>

</geo-render-utility>
